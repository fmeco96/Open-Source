<Window x:Class="Patentest.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Patentest"
        mc:Ignorable="d"
        Title="Login" Height="200" Width="250" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label x:Name="label1" Content="Usuario:" HorizontalAlignment="Left" Margin="12,34,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label2" Content="Contraseña:" HorizontalAlignment="Left" Margin="6,75,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtBoxUsuario" VerticalContentAlignment="Center" HorizontalAlignment="Left" Height="24" Margin="85,38,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <PasswordBox x:Name="passBox" HorizontalAlignment="Left" Margin="85,80,0,0" VerticalAlignment="Top" Width="120" Height="20"/>
        <Button x:Name="btnLogin" Content="Ingresar" HorizontalAlignment="Left" Margin="80,125,0,0" VerticalAlignment="Top" Width="75" Click="BtnLogin_Click"/>

    </Grid>
</Window>
